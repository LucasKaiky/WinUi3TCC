<Page
    x:Class="WinMarket.App.pages.ManageProductsPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:WinMarket.Core.Models"
    xmlns:conv="using:WinMarket.App.converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InvertedBooleanToVisibilityConverter x:Key="NotBoolToVis"/>
    </Page.Resources>

    <Grid Padding="24" RowSpacing="16" ColumnSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="16" CornerRadius="14" Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}">
            <Grid ColumnSpacing="12" RowSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                    <TextBlock Text="Produtos" FontSize="24" FontWeight="SemiBold"/>
                    <TextBlock Opacity="0.7">
                        <Run Text="("/>
                        <Run Text="{Binding FilteredCount}"/>
                        <Run Text=" itens)"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <TextBox
                        Width="320"
                        MinWidth="200"
                        PlaceholderText="Pesquisar produto…"
                        Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="Atualizar" Command="{Binding RefreshCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                    <ProgressRing IsActive="True" Width="48" Height="48"/>
                    <TextBlock Text="Carregando produtos…"/>
                </StackPanel>
            </Grid>

            <Grid Visibility="{Binding IsBusy, Converter={StaticResource NotBoolToVis}}">
                <Grid Visibility="{Binding HasResults, Converter={StaticResource BoolToVis}}">
                    <GridView
                        ItemsSource="{Binding Products}"
                        IsItemClickEnabled="False"
                        SelectionMode="None"
                        Padding="0"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Horizontal" HorizontalAlignment="Center" MinWidth="240"/>
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>

                        <GridView.ItemContainerStyle>
                            <Style TargetType="GridViewItem">
                                <Setter Property="Margin" Value="8"/>
                            </Style>
                        </GridView.ItemContainerStyle>

                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="models:Product">
                                <Border Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}" CornerRadius="12" Padding="16" Width="300" MinHeight="380">
                                    <StackPanel Spacing="10">
                                        <Border CornerRadius="8" Height="180" Background="{ThemeResource SolidBackgroundFillColorTertiaryBrush}">
                                            <Image Source="{Binding ImageUrl}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8"/>
                                        </Border>

                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="SemiBold" MaxLines="2" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding PriceFormatted}" FontSize="16"/>

                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <Button
                                                Content="+ Carrinho"
                                                Command="{Binding DataContext.AddToCartCommand, ElementName=RootPage}"
                                                CommandParameter="{Binding Id}"/>
                                            <Button
                                                Content="Comprar"
                                                Command="{Binding DataContext.BuyNowCommand, ElementName=RootPage}"
                                                CommandParameter="{Binding Id}"
                                                Style="{StaticResource AccentButtonStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>

                <Grid Visibility="{Binding HasResults, Converter={StaticResource NotBoolToVis}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                        <FontIcon Glyph="&#xE11B;" FontSize="40" Opacity="0.7"/>
                        <TextBlock Text="Nenhum produto encontrado" Opacity="0.8"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center" Margin="0,8,0,0">
            <Button Content="← Anterior" Command="{Binding PreviousPageCommand}"/>
            <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                <TextBlock Text="Página"/>
                <TextBlock Text="{Binding CurrentPage}"/>
                <TextBlock Text="de"/>
                <TextBlock Text="{Binding TotalPages}"/>
            </StackPanel>
            <Button Content="Próximo →" Command="{Binding NextPageCommand}"/>
        </StackPanel>
    </Grid>
</Page>
