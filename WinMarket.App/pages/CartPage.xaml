<Page
    x:Class="WinMarket.App.pages.CartPage"
    x:Name="RootPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="using:WinMarket.App.converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <conv:InvertedBooleanToVisibilityConverter x:Key="NotBoolToVis"/>
    </Page.Resources>

    <Grid Padding="24" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="16" CornerRadius="14" Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}">
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <TextBlock Text="Carrinho" FontSize="24" FontWeight="SemiBold"/>
                    <TextBlock Opacity="0.7">
                        <Run Text="("/>
                        <Run Text="{Binding ItemsCount}"/>
                        <Run Text=" itens)"/>
                    </TextBlock>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Button Content="Atualizar" Command="{Binding LoadCommand}"/>
                    <Button Content="Limpar" Command="{Binding ClearCommand}" IsEnabled="{Binding HasItems}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                    <ProgressRing IsActive="True" Width="48" Height="48"/>
                    <TextBlock Text="Carregando carrinho…"/>
                </StackPanel>
            </Grid>

            <Grid Visibility="{Binding IsBusy, Converter={StaticResource NotBoolToVis}}">
                <Grid Visibility="{Binding HasItems, Converter={StaticResource BoolToVis}}">
                    <ListView x:Name="CartList" ItemsSource="{Binding Items}" SelectionMode="None">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Margin" Value="0,8"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}" CornerRadius="12" Padding="12">
                                    <Grid ColumnSpacing="12" RowSpacing="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Width="80" Height="80" CornerRadius="8" Background="{ThemeResource SolidBackgroundFillColorTertiaryBrush}">
                                            <Image Source="{Binding Product.ImageUrl}" Stretch="Uniform" Margin="8"/>
                                        </Border>

                                        <StackPanel Grid.Column="1" Spacing="4" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Product.Name}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" MaxLines="2"/>
                                            <TextBlock Text="{Binding UnitPriceFormatted}" Opacity="0.8"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                            <Button Content="−" Command="{Binding DataContext.DecreaseCommand, ElementName=RootPage}" CommandParameter="{Binding}"/>
                                            <TextBlock Text="{Binding Quantity}" Width="32" HorizontalAlignment="Center" TextAlignment="Center"/>
                                            <Button Content="+" Command="{Binding DataContext.IncreaseCommand, ElementName=RootPage}" CommandParameter="{Binding}"/>
                                            <TextBlock Text="{Binding LineTotalFormatted}" Width="96" TextAlignment="Right"/>
                                            <Button Content="Remover" Command="{Binding DataContext.RemoveCommand, ElementName=RootPage}" CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>

                <Grid Visibility="{Binding HasItems, Converter={StaticResource NotBoolToVis}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="8">
                        <FontIcon Glyph="&#xE11B;" FontSize="40" Opacity="0.7"/>
                        <TextBlock Text="Seu carrinho está vazio" Opacity="0.8"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <Border Grid.Row="2" Padding="16" CornerRadius="14" Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}">
            <Grid ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <TextBlock Text="Subtotal:" FontSize="16"/>
                    <TextBlock Text="{Binding SubtotalFormatted}" FontSize="16" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button Content="Finalizar compra" Command="{Binding CheckoutCommand}" IsEnabled="{Binding HasItems}" Style="{StaticResource AccentButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
